<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RBAC Demo</title>
  <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
  @Scripts.Render("~/bundles/modernizr")

  <!-- JQuery Library References -->
  <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Scripts/jquery-common.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Scripts/jquery-validate.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Scripts/jquery-validate.unobtrusive.js")" type="text/javascript"></script>

  <!-- jQuery UI Theme -->
  <link href="@Url.Content("~/Content/themes/ui-lightness/jquery-ui-1.10.3.min.css")" rel="stylesheet" type="text/css" />
</head>
<body>
  <div class="page">
    <div id="header" class="gradientClass">
      <img src="@Url.Content("~/Content/Images/padlock.jpg")" alt="logo" style="vertical-align:top; margin-top: 0px; margin-bottom: 0px" />
      <font style="font-size: 32px;vertical-align:middle"><strong>Roles Based Access Control (RBAC) Demo</strong></font><br />
      <font style="font-size: 12px">Current User: @User.Identity.Name</font>
    </div>
    <div id="menucontainer">
      <ul class="menuTemplate3 decor3_1">
        @{
          if (ViewContext.Controller.IsSysAdmin())
          {
            <li>
              <a href="#" class="arrow">System Administration</a>
              <div class="drop decor3_2 dropToLeft" style="width: 160px;">
                <div class='right'>
                  <a href="/Admin">Users</a><br />
                  <a href="/Admin/RoleIndex">Roles</a><br />
                  <a href="/Admin/PermissionIndex">Permissions</a><br />                  
                </div>
              </div>
            </li>
          }}
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
      </ul>
    </div>
  </div>
  <div class="container body-content">
    @RenderBody()
  </div>
</body>
</html>
